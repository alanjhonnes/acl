<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="categories-list">
                {% for category in categories|slice(0, 4) %}
                    <div class="col-md-3 col-xs-6">
                        <a href="{{ path('acl.main.trainningsession.category', { 'category_slug': category.slug, 'category_id': category.id  }) }}">
                            <h3>{% thumbnail category.media, 'icon' %}{{ category.name }} </h3>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
