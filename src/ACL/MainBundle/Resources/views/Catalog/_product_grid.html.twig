{#% extends "ACLMainBundle:Product:view_thumbnail.html.twig" % #}

{% set link = url('catalog_product', {'product_id': product.id, 'product_slug': product.slug}) %}

<div class="panel panel-default">
    <div class="panel-heading">
        <h5 itemprop="name" class="panel-title truncate"><a href="{{ link }}">{{ product.name }}</a></h5>
    </div>
    <div class="panel-body">
        {% if product.image %}
            <a href="{{ link }}">{% media product.image, 'main' with {'itemprop': 'image', 'class': 'img-responsive', 'width': null, 'height': null} %}</a>
        {% else %}
            {# default product picture goes here #}
        {% endif %}
    </div>
    <div class="panel-footer">

    </div>
</div>
